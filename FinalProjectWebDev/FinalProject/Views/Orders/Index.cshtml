@model IEnumerable<FinalProject.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<div class="container ordersContainer">

    <div class="row">
        <div class="col-md-5"></div>
        <div class="col-md-2">
            <h2>Työtilaukset</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <button class="btn btn-default btn-lg btn-block createButton" data-url=@Url.Action("Create", "Orders")>Tee uusi tilaus</button>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UsedAccessories)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UsedAccessories)
                    </td>
                    <td class="buttonsBlock">
                        <button class="btn btn-default btn-sm orderButton" data-url=@Url.Action("Details", "Orders") data-id=@item.ID>Lisätiedot</button>
                        @if (item.State == State.TILATTU)
                        {
                            <button class="btn btn-default btn-sm orderButton" data-url=@Url.Action("Edit", "Orders") data-id=@item.ID>Muokkaa</button>
                            <button class="btn btn-default btn-sm orderButton" data-url=@Url.Action("Delete", "Orders") data-id=@item.ID>Poista</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>