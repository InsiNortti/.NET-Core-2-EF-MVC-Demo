@model Apartment

@if (Model != null)
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Lisää asuntotiedot</h4>
    </div>
    <form id="createApartmentForm" asp-controller="Apartments" asp-action="Create">
        <div class="modal-body">
            <input type="hidden" asp-for="CustomerID" value="@ViewData["UserID"]" />
            <div class="form-group">
                <label asp-for="ApartmentType" class="control-label"></label>
                <select asp-for="ApartmentType" class="form-control" asp-items="Html.GetEnumSelectList<ApartmentType>()"></select>
                <span asp-validation-for="ApartmentType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApartmentArea" class="control-label"></label>
                <input type="number" asp-for="ApartmentArea" class="form-control" />
                <span asp-validation-for="ApartmentArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyArea" class="control-label"></label>
                <input type="number" asp-for="PropertyArea" class="form-control" />
                <span asp-validation-for="PropertyArea" class="text-danger"></span>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Peruuta</button>
            <button type="submit" class="btn btn-primary">Lisää asunto</button>
        </div>
    </form>
}
